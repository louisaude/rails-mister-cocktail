
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Add an ingredient and select dosage</h1>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to "Back to #{@cocktail.name}", cocktail_path(@cocktail), class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>

